{
  "name": "Consultant Copilot (CrewAI)",
  // Use a standard Python 3.11 image
  "image": "mcr.microsoft.com/devcontainers/python:3.11",

  // This runs *after* the container is created to install your tools
  "postCreateCommand": "pip install -r requirements.txt",

  // Forward the Streamlit port so you can see it in your browser
  "forwardPorts": [8501],
  "portsAttributes": {
    "8501": {
      "label": "Streamlit App",
      "onAutoForward": "openPreview"
    }
  },

  // Add helpful VS Code extensions
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  }
}